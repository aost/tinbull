<li class="topic">
  <div class="reply-count"><%= topic.posts.length - 1 %></div>
  <%= link_to topic.name, "~#{topic.section}/#{topic.sub_id}", class: 'name' %>
  <% if !params[:section] %>
    <%= link_to '~'+topic.section, '~'+topic.section, class: 'section' %>
  <% end %>
  <div class="info">
    <p title="<%= time(topic) %>"><%= time_ago(topic) %></p>
    <% if !params[:section] %>
    <% end %>
    <br />
  </div>
</li>
